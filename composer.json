{
    "name": "wedevelopcoffee/mailcoach-client",
    "description": "Provides a simple-to-use client to communicate with Mailcoach.",
    "keywords": [
        "wedevelopcoffee",
        "mailcoach-client"
    ],
    "homepage": "https://github.com/wedevelopcoffee/mailcoach-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Koop",
            "email": "daniel@wedevelop.coffee",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "~5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "WeDevelopCoffee\\MailcoachClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WeDevelopCoffee\\MailcoachClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
